<h1>Add course</h1>

<form action="/add" method="post">
  <div class="input-field">
    <input id="title" type="text" name="title" class="validate" required>
    <label for="title">Course title</label>
    <span class="helper-text" data-error="Enter title"></span>
  </div>

  <div class="input-field">
    <input id="price" type="number" name="price" class="validate" required min="1">
    <label for="price">Course price</label>
    <span class="helper-text" data-error="Enter price"></span>
  </div>

  <div class="input-field">
    <input id="img" type="text" name="url" class="validate">
    <label for="img">Course image url</label>
    <span class="helper-text" data-error="Enter img url"></span>
  </div>

  <input type="hidden" name="_csrf" value="{{csrf}}">

  <button class="btn btn-primary">Add course</button>
</form>
